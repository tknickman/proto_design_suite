{% extends "main_base.jinja2" %}

{# page header prefex #}
{% block title %}Profile{% endblock %}
      	

{% block page_header %}
    <div class="row">
        <div class="col-md-8" >
            <div class="page-title"><h1>Profile</h1></div>
        </div>
        <div class="col-md-4">
            <ol class="breadcrumb pull-right">
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/profile">Profile</a></li>
            </ol>
        </div>
    </div>
{% endblock %}


{% block page_content %}
    <div class="row">

        <!-- personal info container starts here -->
        <div class="col-sm-12 col-md-6">
            <div class="widget-box">
                <div class="widget-title">
                    <h2>Personal Information</h2>
                </div>
                <div class="widget-container">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td class="cell-sm">Name :</td>
                                <td>{{ user_dict['name'] }}</td>
                            </tr>

                            <tr>
                                <td>Country :</td>
                                <td>{{ user_dict['country'] }}</td>
                            </tr>

                            {% if user_dict['birthday'] %}
                                <tr>
                                    <td>Birthday :</td>
                                    <td>{{ user_dict['birthday'] }}</td>
                                </tr>
                            {% endif %}

                            {% if user_dict['occupation'] %}
                                <tr>
                                    <td>Occupation :</td>
                                    <td>{{ user_dict['occupation'] }}</td>
                                </tr>
                            {% endif %}

                            <tr>
                                <td> Email :</td>
                                <td>{{ user_dict['email'] }}</td>
                            </tr>

                            {% if user_dict['phone'] %}
                                <tr>
                                    <td>Phone :</td>
                                    <td>{{ user_dict['phone'] }}</td>
                                </tr>
                            {% endif %}

                            <tr>
                                <td> Member Since :</td>
                                <td>{{ user_dict['reg_date'] }}</td>
                            </tr>

                            <tr>
                                <td> Last Activity :</td>
                                <td>{{ user_dict['last_log_in'] }} Ago</td>
                            </tr>

                        </tbody>
                    </table>
            </div>
        </div>
        <!-- personal info container End here -->
    </div>

    <div class="row">
        <!-- skills container starts here -->
        <div class="col-sm-12 col-md-6">
            <div class="widget-box">
                <div class="widget-title">
                    <h2>Stats</h2>
                </div>
                <div class="widget-container">
                    <label>Designs - 10</label>
                    <div class="progress progress-striped active">
                      <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                        <span class="sr-only">99% Complete</span>
                      </div>
                    </div>

                    <label>Contributions - 50</label>
                    <div class="progress progress-striped active">
                      <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                        <span class="sr-only">95% Complete</span>
                      </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- skills container end here -->

    </div>
{% endblock %}
