{% extends "user_base.jinja2" %}

{# page header prefex #}
{% block title %} {{ code }} {% endblock %}


{% block page_header %}
    <div class="row">
        <div class="col-md-8" >
            <div class="page-title"><h1>{{ code }} Error</h1></div>
        </div>
        <div class="col-md-4">
            <ol class="breadcrumb pull-right">
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="#">{{ code }} Error</a></li>
            </ol>
        </div>
    </div>
{% endblock %}
      	

{% block page_content %}
    <div class="row">
        <div class="col-sm-12 col-md-6 col-md-offset-3">
            <div class="widget-box">
                <div class="widget-title">
                    <h2 class="aligncenter">Error {{ code }} - {{ text }}</h2>
                    <br/>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


